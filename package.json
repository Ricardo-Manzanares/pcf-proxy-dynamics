{
  "name": "@ricardo-manzanares/pcf-proxy-dynamics",
  "version": "1.0.17",
  "description": "Backend allowing PCF components to access Dynamics 365 data",
  "main": "dist/WebApiProxy.js",
  "types": "dist/WebApiProxy.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/WebApiProxy.js",
      "require": "./dist/WebApiProxy.js",
      "types": "./dist/WebApiProxy.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "ts-node server.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/node-fetch": "^2.6.2",
    "@types/powerapps-component-framework": "^1.3.18",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
